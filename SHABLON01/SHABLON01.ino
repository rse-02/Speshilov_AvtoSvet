// Константа для номера контакта, к которому подключён датчик
const int PIN_TO_SENSOR = 2;  // Контакт, к которому подключён выход датчика

// Переменная для текущего состояния выхода
int pinStateCurrent = LOW;    // Текущее состояние контакта

// Переменная для предыдущего состояния выхода
int pinStatePrevious = LOW;   // Предыдущее состояние контакта

// Способность проверять наличие ИК-датчика присутствия
void checkSensorPresence() {
  pinStatePrevious = pinStateCurrent;           // Сохранение прошлого состояния
  pinStateCurrent = digitalRead(PIN_TO_SENSOR); // Чтение нового состояния

  if (pinStatePrevious == LOW && pinStateCurrent == HIGH) {  // Изменение состояния: LOW -> HIGH
    Serial.println("Motion detected!");                      // Сообщение о движении
  } else if (pinStatePrevious == HIGH && pinStateCurrent == LOW) {  // Изменение состояния: HIGH -> LOW
    Serial.println("Motion stopped!");                           // Сообщение о прекращении движения
  }
}

